---
import LanguageSwitcher from '../components/LanguageSwitcher.jsx';

const props = Astro.props;
const frontmatter = props?.frontmatter || {};
---

<!DOCTYPE html>
<html lang={frontmatter.lang || 'en'}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{frontmatter.title || 'TrendSignal'}</title>
  <meta name="description" content={frontmatter.title || 'TrendSignal - Catch trending opportunities before everyone else does.'} />
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <LanguageSwitcher client:load currentLang={frontmatter.lang || 'en'} />

  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <article class="prose prose-lg max-w-none bg-white/90 backdrop-blur-sm rounded-xl shadow-lg p-8 border border-gray-100">
      <slot />
    </article>
  </main>

  <footer class="container mx-auto px-4 py-6 max-w-4xl text-center text-gray-600">
    <p>Contact: <a href="mailto:me@linhan.dev" class="text-blue-600 hover:text-blue-800 transition-colors">me@linhan.dev</a></p>
  </footer>
</body>
</html>